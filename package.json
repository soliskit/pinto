{
  "name": "pinto",
  "version": "0.1.0",
  "engines": {
    "node": ">=15"
  },
  "website": "https://pintopinto.herokuapp.com/",
  "scripts": {
    "build": "tsc",
    "start": "node ./build/index.js",
    "dev": "npm run build && npx nodemon",
    "prod": "npx heroku local -p 9000",
    "logs": "npx heroku logs --tail --source app"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "peer": "^0.6.1",
    "socket.io": "^3.0.5"
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      ".env",
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node ./src/index.ts --pretty"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/node": "^14.14.20",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.17.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "author": "David Solis",
  "repository": "https://github.com/litlmoz/pinto",
  "description": "WebRTC signal server for peer connections.",
  "keywords": [
    "WebSocket Server",
    "Socket.io"
  ],
  "private": true
}
